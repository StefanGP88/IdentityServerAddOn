@{
    Layout = "_Layout";
}
<div class="container">
    <table class="table table-striped border border-dark">
        <thead class="thead-dark">
            @RenderSection("TableHead", required: true)
        </thead>
        <tbody>
            @RenderSection("TableBody", required: true)
        </tbody>
        <caption>
            <div class="row">
                <div class="col-6">
                    <nav>
                        <ul class="pagination">
                            <li class="page-item">
                                <a href="#" class="page-link" data-toggle="modal" data-target="#addModal">Add</a>
                            </li>
                        </ul>
                    </nav>

                </div>
                <div class="col-6">
                    @RenderSection("Pagenation", required: true)
                </div>

            </div>
        </caption>
    </table>
</div>

@RenderBody()
<!-- #region addModal -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Add</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @RenderSection("AddModalBody", required: true)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <input type="submit" class="btn btn-info" form="AddForm" value="Save" />
            </div>
        </div>
    </div>
</div>
<!-- #endregion -->
<!-- #region editModal-->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @RenderSection("EditModalBody", required: true)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <input type="submit" class="btn btn-info" form="EditForm" value="Save" />
            </div>
        </div>
    </div>
</div>
<!-- #endregion-->
<!-- #region deleteModal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @RenderSection("DeleteModalBody", required: true)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <input type="submit" class="btn btn-info" form="DeleteForm" value="
                       delete" />
            </div>
        </div>
    </div>
</div>


<!-- #endregion-->
@section scripts {
    @RenderSection("scripts", required: false)
}
            $('#addSecretTypeDetail').val(secretType);
            $('#addSecretValueDetail').val(secretValue);
            $('#addSecretExpirationDateDetail').val(secretExpirationDate);
            $('#addSecretExpirationTimeDetail').val(secretExpirationTime);

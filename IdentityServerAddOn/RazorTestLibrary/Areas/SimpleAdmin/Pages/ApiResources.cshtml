        function PopulateClaimDetail(claim, element) {
            $(element).removeClass("active");
            $('#addClaimDetail').val(claim);
        }

        function PopulatePropertyDetail(property, propertykey, element) {
            $(element).removeClass("active");
            $('#addClaimDetail').val(claim);
        }



    </form>
}

@section Scripts{
    <script type="text/javascript">

        $('#addClaimBtn').on('click', function (e) {
            e.preventDefault();
            var claim = $('#addClaim').val();
            if (claim.length < 1) {
                alert('claim must have a value');
            }
            else {
                $('#addClaimTableBody').append('<tr><td><button class="btn btn-danger btn-sm addClaimRemove" onclick="RemoveClaim(this, event);"></button><input type="hidden" name="dto.Claims[' + claim + ']" value="' + claim + '" /></td><td>' + claim + '</td></tr>');
                $('#addClaim').val('');
            }
        });

        $('#addPropertyBtn').on('click', function (e) {
            e.preventDefault();
            var property = $('#addProperty').val();
            var propertyKey = $('#addPropertyKey').val();
            if (property.length < 1 || propertyKey.length < 1) {
                alert('property and property key must have a value');
            }
            else {
                $('#addPropertyTableBody').append('<tr><td><button class="btn btn-danger btn-sm editClaimRemove" onclick="RemoveClaim(this, event);"></button><input type="hidden" name="dto.Properties[' + propertyKey + ']" value="' + property + '" /></td><td>' + property + '</td><td>' + propertyKey + '</td></tr>');
                $('#addProperty').val('');
                $('#addPropertyKey').val('');
            }
        });

        $('#editClaimBtn').on('click', function (e) {
            e.preventDefault();
            var claim = $('#editClaim').val();
            if (claim.length < 1) {
                alert('claim must have a value');
            }
            else {
                $('#editClaimTableBody').append('<tr><td><button class="btn btn-danger btn-sm editClaimRemove" onclick="RemoveClaim(this, event);"></button><input type="hidden" name="dto.Claims[' + claim + ']" value="' + claim + '" /></td><td>' + claim + '</td></tr>');
                $('#editClaim').val('');
            }
        });

        $('#editPropertyBtn').on('click', function (e) {
            e.preventDefault();
            var property = $('#editProperty').val();
            var propertyKey = $('#editPropertyKey').val();
            if (property.length < 1 || propertyKey.length < 1) {
                alert('property and property key must have a value');
            }
            else {
                $('#editPropertyTableBody').append('<tr><td><button class="btn btn-danger btn-sm editPropertyRemove" onclick="RemoveClaim(this, event);"></button><input type="hidden" name="dto.Properties[' + propertyKey + '].PropertyValue" value="' + property + '" /><input type="hidden" name="dto.Properties[' + propertyKey + '].Key" value="' + propertyKey + '" /></td><td>' + property + '</td><td>' + propertyKey + '</td></tr>');
                $('#editProperty').val('');
                $('#editPropertyKey').val('');
            }
        });

        $('#editModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var modal = $(this);
            modal.find('.modal-body #scopeid').val(button.data('scopeid'));
            modal.find('.modal-body #editScopeName').val(button.data('scopename'));
            modal.find('.modal-body #editScopeDisplayName').val(button.data('displayname'));
            modal.find('.modal-body #editScopeDescription').val(button.data('description'));
            modal.find('.modal-body #editenabled').prop('checked', button.data('enabled') === 'True');
            modal.find('.modal-body #editRequired').prop('checked', button.data('required') === 'True');
            modal.find('.modal-body #editEmphasize').prop('checked', button.data('emphasize') === 'True');
            modal.find('.modal-body #editShowInDiscovery').prop('checked', button.data('showindiscoverydocument') === 'True');

            var claimRows = $('#editClaimTableBody .editClaimRemove');
            for (var key in claimRows) {
                $('#editClaimTableBody .editClaimRemove').parents().eq(1).remove();
            }

            var claimlist = button.data('claimlist');
            for (var key in claimlist) {
                for (var kkey in claimlist[key]) {
                    $('#editClaimTableBody').append('<tr><td><button class="btn btn-danger btn-sm editClaimRemove" onclick="RemoveClaim(this, event);"></button><input type="hidden" name="dto.Claims[' + kkey + ']" value="' + claimlist[key][kkey] + '" /></td><td>' + claimlist[key][kkey] + '</td></tr>');
                }
            }

            var claimRows = $('#editClaimTableBody .editPropertyRemove');
            for (var key in claimRows) {
                $('#editPropertyTableBody .editPropertyRemove').parents().eq(1).remove();
            }

            var propertylist = button.data('propertylist');
            for (var key in propertylist) {
                $('#editPropertyTableBody').append('<tr><td><button class="btn btn-danger btn-sm editPropertyRemove" onclick="RemoveClaim(this, event);"></button><input type="hidden" name="dto.Properties[' + propertylist[key].propertyid + '].PropertyValue" value="' + propertylist[key].propertyvalue + '" /><input type="hidden" name="dto.Properties[' + propertylist[key].propertyid + '].Key" value="' + propertylist[key].propertykey + '" /></td><td>' + propertylist[key].propertyvalue + '</td><td>' + propertylist[key].propertykey + '</td></tr>');

            }
        });

        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var modal = $(this);
            console.log(button.data('scopename'));
            console.log(button.data('scopeid'));
            modal.find('.modal-body #deleteApiScope').text(button.data('scopename'));
            modal.find('.modal-body #deleteId').val(button.data('scopeid'));
        });
    </script>
}

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#addLockoutEndDate').val('@(new DateTime(1970, 1, 1).ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture))');
            $('#addLockoutEndTime').val('@(new DateTime(1970, 1, 1).ToString("T", System.Globalization.CultureInfo.InvariantCulture))');
            $('#addLockoutEnd').val($('#addLockoutEndDate').val() + ' ' + $('#addLockoutEndTime').val());
        });

        function RemoveClaim( element, event) {
            event.preventDefault();
            $(element).parents().eq(1).remove();
        }

        $('#editClaimBtn').on('click', function (e) {
            e.preventDefault();
            var claim = $('#editClaim').val();
            var claimType = $('#editClaimType').val();
            console.log(claim);
            if (claim.length < 1 || claimType.length < 1)
            {
                alert('claim and claim type must have a value');
            }
            else
            {
                $('#editClaimTableBody').append('<tr><td><button class="btn btn-danger btn-sm editClaimRemove" onclick="RemoveClaim(this, event);"></button><input type="hidden" name="dto.Claims[' + claim + ']" value="' + claimType + '" /></td><td>' + claim + '</td><td>' + claimType + '</td></tr>');
                $('#editClaim').val('');
                $('#editClaimType').val('');
            }
        });

        $('#addClaimBtn').on('click', function (e) {
            e.preventDefault();
            var claim = $('#addClaim').val();
            var claimType = $('#addClaimType').val();
            console.log(claim);
            if (claim.length < 1 || claimType.length < 1) {
                alert('claim and claim type must have a value');
            }
            else {
                $('#addClaimTableBody').append('<tr><td><button class="btn btn-danger btn-sm addClaimRemove" onclick="RemoveClaim(this, event);"></button><input type="hidden" name="dto.Claims[' + claim + ']" value="' + claimType + '" /></td><td>' + claim + '</td><td>' + claimType + '</td></tr>');
                $('#addClaim').val('');
                $('#addClaimType').val('');
            }
        });

        $('#addLockoutEndDate').on('change', function () {
            var date = $('#addLockoutEndDate').val();
            var time = $('#addLockoutEndTime').val();
            $('#addLockoutEnd').val(date + ' ' + time);
        });
        $('#addLockoutEndTime').on('change', function () {
            var date = $('#addLockoutEndDate').val();
            var time = $('#addLockoutEndTime').val();
            $('#addLockoutEnd').val(date + ' ' + time);
        });
        $('#editLockoutEndDate').on('change', function () {
            var date = $('#editLockoutEndDate').val();
            var time = $('#editLockoutEndTime').val();
            $('#editLockoutEnd').val(date + ' ' + time);
        });
        $('#editLockoutEndTime').on('change', function () {
            var date = $('#editLockoutEndDate').val();
            var time = $('#editLockoutEndTime').val();
            $('#editLockoutEnd').val(date + ' ' + time);
        });

        $('#editModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var modal = $(this);
            modal.find('.modal-body #editId').val(button.data('userid'));
            modal.find('.modal-body #editUsername').val(button.data('username'));
            modal.find('.modal-body #editEmail').val(button.data('email'));
            modal.find('.modal-body #editPhoneNumber').val(button.data('phonenumber'));
            modal.find('.modal-body #editLockoutEndDate').val(button.data('lockoutenddate'));
            modal.find('.modal-body #editLockoutEndTime').val(button.data('lockoutendtime'));
            $('#editLockoutEnd').val(button.data('lockoutenddate') + ' ' + button.data('lockoutendtime'));
            modal.find('.modal-body #editConcurrencyStamp').val(button.data('concurrencystamp'));
            modal.find('.modal-body #editUse2fa').prop('checked', button.data('use2fa') === 'True');
            modal.find('.modal-body #editConfirmEmail').prop('checked', button.data('emailconfirmed') === 'True');
            modal.find('.modal-body #editConfirmPhoneNumber').prop('checked', button.data('phonenumberconfirmed') === 'True');
            modal.find('.modal-body #editEnableLockout').prop('checked', button.data('lockoutenabled') === 'True');
        
            var rolelist = button.data('rolelist');
            @foreach (var item in Model.UserRoleList.Items)@*not exactly pretty but will do for now*@
            {
                <text>modal.find('.modal-body @("#editRole"+item.RoleName)').prop('checked', rolelist.includes('@item.RoleName'));</text>
            }

            var claimRows = $('#editClaimTableBody .editClaimRemove');
            for (var key in claimRows) {
                $('#editClaimTableBody .editClaimRemove').parents().eq(1).remove();
            }

            var claimlist = button.data('claimlist');
            for (var key in claimlist) {
                for (var kkey in claimlist[key])
                {
                    $('#editClaimTableBody').append('<tr><td><button class="btn btn-danger btn-sm editClaimRemove" onclick="RemoveClaim(this, event);"></button><input type="hidden" name="dto.Claims[' + kkey + ']" value="' + claimlist[key][kkey] + '" /></td><td>' + kkey + '</td><td>' + claimlist[key][kkey] + '</td></tr>');
                }
            }
        });

        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var modal = $(this);
            modal.find('.modal-body #deleteUserName').text(button.data('username'));
            modal.find('.modal-body #deleteId').val(button.data('userid'));
            modal.find('.modal-body #deleteConcurrencyStamp').val(button.data('roleconcurrency'));
        });
    </script>
}

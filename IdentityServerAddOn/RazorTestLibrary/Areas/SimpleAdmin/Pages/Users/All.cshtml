            <div class="tab-pane fade" id="nav-roles" role="tabpanel" aria-labelledby="nav-roles-tab">
                <br />
                <table class="table table-sm">
                    <tbody>
                        @foreach (var item in Model.UserRoleList.Items)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" id="@("addRole"+item.RoleName)" name="dto.Roles[@item.Id]" value="@item.RoleName" />
                                </td>
                                <td>@item.RoleName</td>
                            </tr>

@{
    Layout = "_Layout";
}
<partial name="_SharedStyling" />
<div class="container">
    <form id="form" method="post" asp-route-pageNumber="@Model.PageNumber" asp-route-pageSize="@Model.PageSize">
        <input type="hidden" id="resourceId" name="dto.Id" value="@Model?.Data?.Id" />
        @Html.AntiForgeryToken()
        @if (IsSectionDefined("Navtabs"))
        {
            <nav>
                <div class="nav nav-pills nav-fill" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="basesettingstab" data-toggle="tab" href="#basesettings" role="tab">Base Settings</a>
                    @RenderSection("Navtabs", required: false)
                </div>
            </nav>
        }
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="basesettings" role="tabpanel">
                @RenderSection("Basesettings", required: true)
                <div class="form-group">
                    <button type="submit" form="form" class="btn btn-success form-control"></button>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-outline-warning form-control" onclick="SetAbandonModal();"></button>
                </div>
            </div>
            @RenderSection("ResourceProperties", required: false)
        </div>
    </form>
</div>
<template id="removeModalBody">
    <div class="alert alert-danger" role="alert">
        Are you sure you want to Remove <span id="removeRowNameSpan"></span> ?
    </div>
</template>
<template id="abandonModalBody">
    <div class="alert alert-warning" role="alert">
        Are you sure you want to leave this page?
        <br />
        All changes will be lost.
    </div>
</template>
<partial name="_Modal" />
@section Scripts{
    <partial name="_SharedScripts" />
    @RenderSection("Scripts", required: false)
}
@page
@model Ids.SimpleAdmin.Frontend.Areas.SimpleAdmin.Pages.ApiResources.IndexModel
@{
    Layout = "_NestedIndexLayout";
}

<tr>
    <th scope="col"></th>
    <th scope="col">Name</th>
    <th scope="col">Display name</th>
    <th scope="col">Description</th>
    <th scope="col"></th>
</tr>

@foreach (var item in Model.List.Items)
{
    <tr>
        <td>
            <a asp-page="Info" asp-route-id="@item.Id" class="btn btn-info btn-block"></a>
        </td>
        <td class="align-middle">
            @item.Name
        </td>
        <td class="align-middle">
            @item.DisplayName
        </td>
        <td class="align-middle">
            @item.Description
        </td>
        <td>
            <button type="button" class="btn btn-outline-danger btn-block float-right"
                    onclick="DeleteResource(@item.Id, 'api resource')">
            </button>
        </td>
    </tr>
}

@section Pagenation{
    <partial name="_Pagenation" model="Model.List.ToPagenationInfo()" />
}

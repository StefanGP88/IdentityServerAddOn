@model ApiResourceSecretsContract
@{
    var idx = Guid.NewGuid().ToString().Replace("-", "");
}
<tr>
    <td>
        <input type="button" class="btn" />
    </td>
    <td>
        @Model.Type
        <input type="hidden" name="dto.ApiResourceSecrets.index" value="@idx" />
        <input type="hidden" name="dto.ApiResourceSecrets[@idx].Id" value="@Model.Id" />
        <input type="hidden" name="dto.ApiResourceSecrets[@idx].ApiResourceId" value="@Model.ApiResourceId" />
        <input type="hidden" name="dto.ApiResourceSecrets[@idx].Type" value="@Model.Type" />
        <input type="hidden" name="dto.ApiResourceSecrets[@idx].Description" value="@Model.Description" />
        <input type="hidden" name="dto.ApiResourceSecrets[@idx].Value" value="@Model.Value" />
    </td>
    <td>
        @Model.Value
    </td>
    <td>
        @Model.Description
    </td>
    <td>
        @Model.Expiration
    </td>
    <td>
        <input type="button" class="btn" />

    </td>
</tr>
@model ApiResourceScopesContract
@{
    var idx = Guid.NewGuid();
    var disabled = Model != null ? "disabled" : string.Empty;
    var disabledClass = Model != null ? "border-0 bg-transparent" : string.Empty;
    var disabledBtn = Model != null ? "btn-info" : "btn-success";
}
<tr>
    <td>
        <button type="button" class="btn  @disabledBtn btn-block" onclick="ToggleEdit(this);"></button>
    </td>
    <td>
        <input type="hidden" name="dto.Scopes.index" value="@idx" />
        <input type="hidden" name="dto.Scopes[@idx].Id" value="@Model?.Id" />
        <input type="hidden" name="dto.Scopes[@idx].ApiResourceId" value="@Model?.ApiResourceId" />
        <input type="text"
               name="dto.Scopes[@idx].Scope"
               value="@Model?.Scope"
               class="form-control @disabledClass" @disabled/>
    </td>
    <td>
        <button type="button"
                class="btn btn-outline-danger btn-block float-right"
                onclick="SetRemoveModal(this, 'dto.ApiResourceScopes[@idx].Scope');"
                data-toggle="modal" data-target="#removeRowModal">
        </button>
    </td>
</tr>
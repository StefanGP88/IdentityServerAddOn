@model ApiResourceScopesContract
@{
    var idx = Guid.NewGuid();
}
<tr>
    <td>
        <button form="#" class="btn btn-success" onclick="ToggleEdit(this);"></button>
    </td>
    <td>
        <input type="hidden" name="dto.ApiResourceScopes.index" value="@idx" />
        <input type="hidden" name="dto.ApiResourceScopes[@idx].Id" value="@Model?.Id" />
        <input type="hidden" name="dto.ApiResourceScopes[@idx].ApiResourceId" value="@Model?.ApiResourceId" />
        <input type="text" name="dto.ApiResourceScopes[@idx].Scope" value="@Model?.Scope"  class="form-control"/>
    </td>
    <td>
        <button type="button" class="btn btn-danger" onclick="SetRemoveModal(this, 'dto.ApiResourceScopes[@idx].Scope');" data-toggle="modal" data-target="#removeRowModal"></button>
    </td>
</tr>
@page
@model Ids.SimpleAdmin.Frontend.Areas.SimpleAdmin.Pages.User.IndexModel
@{
    Layout = "_NestedIndexLayout";
}

@section TableHead {
    <tr>
        <th scope="col"></th>
        <th scope="col">User name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone number</th>
        <th scope="col"></th>
    </tr>
}

@section TableBody{
    @foreach (var item in Model.List.Items)
    {
        <tr>
            <td>
                <a asp-page="Info" asp-route-id="@item.Id" class="btn btn-info btn-block"></a>
            </td>
            <td class="align-middle">
                @item.UserName
            </td>
            <td class="align-middle">
                @item.Email
            </td>
            <td class="align-middle">
                @item.PhoneNumber
            </td>
            <td>
                <button type="button" class="btn btn-outline-danger btn-block float-right"
                        onclick="SetDeleteModal('@item.Id', '@item.UserName')">
                </button>
            </td>
        </tr>
    }
}

@section Pagenation{
    <partial name="_Pagenation" model="Model.List.ToPagenationInfo()" />
}

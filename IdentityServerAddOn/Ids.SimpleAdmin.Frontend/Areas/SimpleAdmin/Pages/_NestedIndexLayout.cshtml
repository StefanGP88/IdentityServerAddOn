@{
    Layout = "_Layout";
}

<div class="container">
    <div class="card">
        @await Component.InvokeAsync("Header")
        <div class="card-body">
            @RenderSection("TableBody", required: true)
        </div>
    </div>

    <div class="form-group">
        <a href="/simpleadmin" class="btn btn-outline-warning form-control"></a>
    </div>

    @RenderSection("Pagenation", required: true)
</div>
<form id="DeleteForm" method="post" asp-route-pageNumber="@Model.List.Page" asp-route-pageSize="@Model.List.PageSize">
    @Html.AntiForgeryToken()
    <input type="hidden" id="deleteId" name="id" />
</form>
<partial name="_Modal" />
@section Scripts{
    <partial name="_SharedScripts" />
    @RenderSection("Scripts", required: false)
}
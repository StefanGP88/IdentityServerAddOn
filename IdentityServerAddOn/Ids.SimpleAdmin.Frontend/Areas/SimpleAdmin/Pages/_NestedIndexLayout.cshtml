@{
    Layout = "_Layout";
}

<div class="container">
    <div class="card">
        @await Component.InvokeAsync("Header")
        <div class="card-body">
            @RenderBody()
        </div>
    </div>
    @if (IsSectionDefined("Pagenation"))
    {
        <br />
        <div class="row justify-content-between">
            <div class="col-auto">
                @RenderSection("Pagenation", required: false)
            </div>
            <div class="col-auto">
                <a href="/simpleadmin" class="btn btn-outline-dark">Back to main menu</a>
            </div>
        </div>
    }
</div>

@if (IsSectionDefined("Pagenation"))
{
    <form id="DeleteForm" method="post" asp-route-pageNumber="@Model.List.Page" asp-route-pageSize="@Model.List.PageSize">
        @Html.AntiForgeryToken()
        <input type="hidden" id="deleteId" name="id" />
    </form>
}

<partial name="_Modal" />
@section Scripts{
    <partial name="_SharedScripts" />
    @RenderSection("Scripts", required: false)
}
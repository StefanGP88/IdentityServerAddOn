@page
@model Ids.SimpleAdmin.Frontend.Areas.SimpleAdmin.Pages.Clients.IndexModel
@{
    Layout = "_NestedIndexLayout";
}

@section TableBody{

    @*<div class="row" style="margin-top:8px;">
        <div class="col">*@
    <div class="row text-left" style="padding: .375rem .75rem;">
        <div class="col">
            Client Id
        </div>
        <div class="col">
            Client Name
        </div>
        <div class="col">
            Description
        </div>
        <div class="col-2"></div>
    </div>
    @*</div>

        </div>*@

    @foreach (var item in Model.List.Items)
    {

        <div class="row" style="margin-bottom:8px;">
            <div class="col">
                <a asp-page="Info" asp-route-id="@item.Id" class="btn btn-outline-primary btn-block">
                    <div class="row text-left">
                        <div class="col">
                            @item.ClientId
                        </div>
                        <div class="col">
                            @item.ClientName
                        </div>
                        <div class="col">
                            @item.Description
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-outline-danger btn-block"
                        onclick="DeleteResource(@item.Id, 'client')">
                    delete
                </button>
            </div>
        </div>
    }
}
@section Pagenation{
    <partial name="_Pagenation" model="Model.List.ToPagenationInfo()" />
}
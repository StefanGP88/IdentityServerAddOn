@model Ids.SimpleAdmin.Frontend.Areas.SimpleAdmin.Pages.Clients.InfoModel

<collapsable title="Life Times" error-summary="_validationCache.LifeTimeSummary(Model?.Data)">
    <div class="form-group">
        <label class="col-form-label">User sso lifetime</label>
        @_validationCache.ErrorMessage(Model?.Data, nameof(Model.Data.UserSsoLifetime), out var inputColor)
        <input type="number" class="form-control @inputColor" name="dto.UserSsoLifetime" value="@Model?.Data?.UserSsoLifetime">
    </div>
    <div class="form-group">
        <label class="col-form-label">Device code lifetime</label>
        @_validationCache.ErrorMessage(Model?.Data, nameof(Model.Data.DeviceCodeLifetime), out inputColor)

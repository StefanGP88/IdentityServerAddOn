    </div>
    <div class="form-group">
        <label class="col-form-label">Access token lifetime</label>
        @_validationCache.ErrorMessage(Model?.Data, nameof(Model.Data.AccessTokenLifetime), out inputColor)
        <input type="number" class="form-control @inputColor" name="dto.AccessTokenLifetime" value="@Model?.Data?.AccessTokenLifetime">
    </div>
    <div class="form-group">
        <label class="col-form-label">Authorization code lifetime</label>
        @_validationCache.ErrorMessage(Model?.Data, nameof(Model.Data.AuthorizationCodeLifeTime), out inputColor)
        <input type="number" class="form-control @inputColor" name="dto.AuthorizationCodeLifeTime" value="@Model?.Data?.AuthorizationCodeLifeTime">
    </div>
    <div class="form-group">
        <label class="col-form-label">Consent lifetime</label>
        @_validationCache.ErrorMessage(Model?.Data, nameof(Model.Data.ConsentLifetime), out inputColor)

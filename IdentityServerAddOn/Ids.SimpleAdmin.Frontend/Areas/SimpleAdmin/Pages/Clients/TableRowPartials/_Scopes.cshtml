@model ClientScopeContract
@{
    var validationResult = _validator.Validate(Model);
    var idx = Guid.NewGuid();
    var disabled = (!Model.IsNull() && validationResult.IsValid) ? "readonly" : string.Empty;
    var disabledClass = (!Model.IsNull() && validationResult.IsValid) ? "border-0 bg-transparent" : string.Empty;
    var disabledBtn = (!Model.IsNull() && validationResult.IsValid) ? "btn-info" : "btn-success";
}
<tr>
    <td>
        <button type="button" class="btn  @disabledBtn btn-block" onclick="ToggleEdit(this, 'Scopes');"></button>
    </td>
    <td>
        <input type="hidden" name="dto.Scopes.index" value="@idx" />
        <input type="hidden" name="dto.Scopes[@idx].Id" value="@Model?.Id" />
        <input type="hidden" name="dto.Scopes[@idx].ClientId" value="@Model?.ClientId" />
        <input type="text"
               name="dto.Scopes[@idx].Scope"
               value="@Model?.Scope"
               class="form-control @disabledClass" @disabled />
        <partial name="_ValidationNotificationPartial" model="@validationResult["Scope"]" />
    </td>
    <td>
        <button type="button"
                class="btn btn-outline-danger btn-block float-right"
                onclick="SetRemoveModal(this, 'dto.Scopes[@idx].Scope');"
                data-toggle="modal" data-target="#removeRowModal">
        </button>
    </td>
</tr>
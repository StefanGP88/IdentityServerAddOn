@page
@model Ids.SimpleAdmin.Frontend.Areas.SimpleAdmin.Pages.Roles.IndexModel
@{
    Layout = "_NestedIndexLayout";
}

@section TableHead {
    <tr>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col">Normalized name</th>
        <th scope="col"></th>
    </tr>
}

@section TableBody{
    @foreach (var item in Model.List.Items)
    {
        <tr>
            <td>
                <a asp-page="Info" asp-route-id="@item.Id" class="btn btn-info btn-block"></a>
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.NormalizedName
            </td>
            <td>
                <button type="button" class="btn btn-outline-danger btn-block float-right"
                        onclick="SetDeleteModal(@item.Id, '@item.Name')">
                </button>
            </td>
        </tr>
    }
}

@section Pagenation{
    <partial name="_Pagenation" model="Model.List.ToPagenationInfo()" />
}

@model ClaimsContract
@{
    var idx = Guid.NewGuid().ToString().ToLowerInvariant();
    var delete = "claim-" + idx + "-d";
}
<tr class="border-top border-bottom bg-light @delete">
    <td>
        <input type="hidden" name="dto.Claims.index" value="@idx" />
        <input type="hidden" name="dto.Claims[@idx].Id" value="@Model?.Id" />
        @_validationCache.ErrorMessage(Model, nameof(Model.Type), out var inputColor)
        <input type="text"
               name="dto.Claims[@idx].Type"
               value="@Model?.Type"
               class="form-control form-control-sm m-1 @inputColor" />
    </td>
    <remove title="claim" target="@delete"></remove>
</tr>
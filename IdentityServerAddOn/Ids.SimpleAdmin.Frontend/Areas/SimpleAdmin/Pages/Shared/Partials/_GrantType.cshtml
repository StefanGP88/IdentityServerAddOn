@model ClientGrantTypesContract
@{
    var idx = Guid.NewGuid().ToString().ToLowerInvariant();
    var delete = "grant-type-" + idx + "-d";
}
<tr class="border-top border-bottom bg-light @delete">
    <td>
        <input type="hidden" name="dto.GrantTypes.index" value="@idx" />
        <input type="hidden" name="dto.GrantTypes[@idx].Id" value="@Model?.Id" />
        <input type="hidden" name="dto.GrantTypes[@idx].ClientId" value="@Model?.ClientId" />
        
        @_validationCache.ErrorMessage(Model, nameof(Model.GrantType), out var inputColor)
        <input type="text"
               name="dto.GrantTypes[@idx].GrantType"
               value="@Model?.GrantType"
               class="form-control form-control-sm ml-1 @inputColor" />
    </td>
    <remove title="grant type" target="@delete"></remove>
</tr> 